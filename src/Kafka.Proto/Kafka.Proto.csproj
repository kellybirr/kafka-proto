<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Coderz.Kafka.Proto</RootNamespace>
    <Version>1.5.0</Version>
    <AssemblyName>Coderz.Kafka.Proto</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Kelly Birr</Authors>
    <PackageProjectUrl>https://github.com/kellybirr/kafka-proto</PackageProjectUrl>
    <Description>Protobuf serialization with Kafka for .Net</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.21.12" />
    <PackageReference Include="Confluent.Kafka" Version="2.0.2" />
  </ItemGroup>

</Project>
